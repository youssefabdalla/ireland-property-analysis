{
  "name": "Ireland Property Analysis",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {
      "configureZshAsDefaultShell": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "ms-toolsai.datawrangler",
        "ms-toolsai.jupyter",
        "xelad0m.jupyter-toc"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvInSelectedTerminal": true,
        "python.analysis.typeCheckingMode": "basic"
      }
    }
  },
  "postCreateCommand": "curl -sSL https://install.python-poetry.org | python3 - && export PATH=$PATH:$HOME/.local/bin && poetry config virtualenvs.in-project true && poetry install --no-root && rm -f .git/hooks/post-commit .git/hooks/pre-push",
  "remoteUser": "vscode"
}